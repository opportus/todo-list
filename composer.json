{
    "name": "opportus/todo-list",
    "description": "A todo list application.",
    "type": "project",
    "license": "MIT",
    "homepage": "https://github.com/opportus/todo-list",
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "classmap": [
            "app/AppKernel.php",
            "app/AppCache.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.3",
        "symfony/symfony": "^4.3",
        "sensio/framework-extra-bundle": "^5.4",
        "doctrine/doctrine-bundle": "^1.11"
    },
    "require-dev": {
        "symfony/monolog-bundle": "^3.4",
        "phpunit/phpunit": "^8.2",
        "dama/doctrine-test-bundle": "^6.0",
        "doctrine/doctrine-fixtures-bundle": "^3.2",
        "blackfire/php-sdk": "^1.18"
    },
    "scripts": {
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ]
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative"
    }
}
